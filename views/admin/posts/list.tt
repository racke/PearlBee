<div class="mainy">
 <!-- Page title -->
 <div class="page-title">
    <h2><i class="icon-file color"></i> Posts <small>Manage blog posts</small></h2>
    <hr />
 </div>
 <!-- Page title -->
 
    <div class="row">
       <div class="col-md-12">

        <div class="awidget">
           <div class="awidget-head">
               [% IF status %]
				  <h3>All [% status %] posts</h3>
			   [% ELSE %]
				  <h3>All posts</h3>
			   [% END %]
           </div>
           <div class="awidget-body">
              
              <a href="/dashboard/posts"> All </a>([% all %]) | 
              <a href="/dashboard/posts?status=published"> Published </a>([% publish %]) | 
              <a href="/dashboard/posts?status=draft"> Draft </a>([% draft %]) | 
              <a href="/dashboard/posts?status=trash"> Trash </a>([% trash %])

              <table class="table table-hover table-bordered ">
               <thead>
                 <tr>
                   <th> Author     </th>
                   <th> Title      </th>
                   <th> Categories </th>
                   <th> Tags       </th>
                   <th> Comments   </th>
                   <th> Actions    </th>
                 </tr>
               </thead>
               <tbody>

                [% FOREACH post in posts %]

                  <tr>
                    <td width="20%">
                      <b> <i class="icon-user"></i> <a href="[% post.user.uri %]">[% post.user.username %]</a></b>
                      <br />
                      <b> [% post.user.first_name %] [% post.user.last_name %] </b>
                      <br />
                      <i> [% post.created_date %] </i>
                    </td>

                    <td width="25%"> 
                      <b> <a href="[% post.uri %]"> [% post.title %] </a> </b>
                      <br />
                      <br />

                      [% IF (post.status == 'published') %]
                        <span class="label label-success"> Published </span>
                      [% ELSE %]
                        <a href="/dashboard/posts/publish/[% post.id %]"> Publish </a>
                      [% END %]

                      |

                      [% IF (post.status == 'draft') %]
                        <span class="label label-warning"> Draft </span>
                      [% ELSE %]
                        <a href="/dashboard/posts/draft/[% post.id %]"> Draft </a>
                      [% END %]

                      |

                      [% IF (post.status == 'trash') %]
                        <span class="label label-danger"> Trash </span>
                      [% ELSE %]
                        <a href="/dashboard/posts/trash/[% post.id %]"> Trash </a>
                      [% END %]
                    </td>

                    <td>
                        [% FOREACH post_category IN post.post_categories %]
                          <a href="[% post_category.category.uri %]"> [% post_category.category.name %] </a>
                        [% END %]
                    </td>

                    <td width="5%"> 
                      [% FOREACH post_tag IN post.post_tags %]
                        <a href="[% post_tag.tag.uri %]"> [% post_tag.tag.name %] </a>
                      [% END %]
                    </td>

                    <td width="5"> 
                      <a href="[% post.uri %]#comments"> [% post.nr_of_comments %] </a>
                    </td>
                    
                    <td width="10%">
                       <a href="[% post.uri %]"> <button class="btn btn-xs btn-success"><i class="icon-eye-open"></i> </button> </a>
                       <a href="[% post.edit_uri %]"> <button class="btn btn-xs btn-warning"><i class="icon-pencil"></i> </button> </a>
                   </td>
                  </tr>

                [% END %]                                                             

               </tbody>
             </table>
             
              <ul class="pagination pull-right">
                [% INCLUDE components/pagination.tt %]
              </ul>
               
               <div class="clearfix"></div>
              
           </div>
        </div>

      </div>
    </div>
  </div>
</div>
